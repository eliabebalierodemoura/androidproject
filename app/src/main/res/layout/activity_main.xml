<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/maintext1"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:background="#F2DA00"
        android:text="@string/introduce"
        android:textColor="#DE0D0D"
        android:textSize="20dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/activity2"
        android:layout_marginLeft="20dp"
        android:layout_width="160dp"
        android:layout_height="181dp"
        android:layout_marginTop="60dp"
        android:background="#F2DA00">


        <ImageView
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laptop"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/maintext2"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-127dp"
            android:background="#F2DA00"
            android:text="Eletronics"
            android:textColor="#DE0D0D"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity3"
        android:layout_marginLeft="210dp"
        android:layout_width="160dp"
        android:layout_height="181dp"
        android:layout_marginTop="-183dp"
        android:background="#F2DA00">


        <ImageView
            android:layout_width="160dp"
            android:layout_height="154dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/joia"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/maintext3"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-123dp"
            android:background="#F2DA00"
            android:text="Jewelery"
            android:textColor="#DE0D0D"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity4"
        android:layout_width="160dp"
        android:layout_height="181dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="30dp"
        android:background="#F2DA00">


        <ImageView
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/clothes"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/maintext4"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-113dp"
            android:background="#F2DA00"
            android:text="Clothes"
            android:textColor="#DE0D0D"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="80dp"
        android:background="#F2DA00"
        android:text="Make your order now!!!"
        android:textColor="#DE0D0D"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ic_baseline_phone_24"

        />


    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:text="Log out" />

</LinearLayout>
