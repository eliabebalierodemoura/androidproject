<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoppingcard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:background="#F2DA00"
        android:orientation="vertical">


        <TextView
            android:id="@+id/main_text1"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="#F2DA00"
            android:text="@string/warning"
            android:textColor="#DE0D0D"
            android:textSize="20dp"
            android:textStyle="italic" />


        <ImageView
            android:id="@+id/main_image"
            android:layout_width="240dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rearrin"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/main_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />


        <TextView

            android:id="@+id/newsText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="text1"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"

            />

        <Button
            android:id="@+id/oderButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="258dp"
            android:layout_marginTop="-160dp"
            android:text="order"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="79dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="-250dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="248dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_star_24" />


            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_star_24" />


            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_star_24" />


            />
        </LinearLayout>

    </LinearLayout>

    <Button
        app:backgroundTint="@null"
        android:background="@drawable/rounbutton"
        android:id="@+id/addbutton"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:text="add"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="79dp" />



    <Button
        app:backgroundTint="@null"
        android:background="@drawable/rounbutton"
        android:id="@+id/minusButton"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="back"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/backhome"
        android:layout_width="110dp"
        android:layout_height="53dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/rounbutton"
        android:text="home page"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="79dp" />


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="-50dp"
        android:text="0"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="-140dp"
        android:text="@string/warning1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="-370dp"
        android:src="@drawable/shopping_cart_24"

        />

    <TextView
        android:id="@+id/orderCart"
        android:layout_marginLeft="340dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-39dp"
        android:textColor="#DE0D0D"
        android:text="0"
        android:textSize="30dp" />

</LinearLayout>
